@model LoanCalculatorMVC.Models.Loan

<div class="container">
    <h1 class="mb-2">Loan Calculator</h1>
    <div class="row">
        <div class="col">
            <form asp-controller="Home" asp-action="App" method="post">
                <div class="form-row">
                    <div class="form-group col-12">
                        <label asp-for="Amount">Loan Amount:</label>
                        <input type="number" class="form-control" id="lamount" min="1000" step="500" value=@Model.Amount asp-for="Amount">
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Term">Term:</label>
                        <input type="number" class="form-control" id="lterm" min="1" value=@Model.Term asp-for="Term">
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="Rate">Rate:</label>
                        <input type="number" class="form-control" id="lrate" min="1" step=".5" value=@Model.Rate asp-for="Rate">
                    </div>
                </div>
                <button type="submit" class="btn btn-Custom mt-2">Calculate</button>
            </form>
        </div>
        <div class="col">
            <div id="paymentTitle">
                <p>Your Monthly Payments</p>
            </div>
            <p id="payment">
                @Model.Payment.ToString("C")
            </p>
            <div class="row">
                <div class="col-6">
                    <label class="text-left">Total Principal</label>
                </div>
                <div class="col-6" id="totalPrincipal">
                    <label class="text-right">
                        @Model.Amount.ToString("C")
                    </label>
                </div>
                <div class="col-6">
                    <label class="text-left">Total Interest</label>
                </div>
                <div class="col-6" id="totalInterest">
                    <label class="text-right">
                        @Model.TotalInterest.ToString("C")
                    </label>
                </div>
                <div class="col-6">
                    <label class="text-left">Total Cost</label>
                </div>
                <div class="col-6" id="totalCost">
                    <label class="text-right">
                        @Model.TotalCost.ToString("C")
                    </label>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Payments.Count > 0)
    {
        <div class="row">
            <div class="col mt-2">
                <table id="scheduleTable" class="table table-striped table-hover">
                    <thead id="tableheader" class="text-white">
                        <tr>
                            <th>Month</th>
                            <th>Payment</th>
                            <th>Principal</th>
                            <th>Interest</th>
                            <th>Total Interest</th>
                            <th>Balance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Payments)
                        {
                            <tr>
                                <td>@item.Month</td>
                                <td>@item.Payment.ToString("C")</td>
                                <td>@item.MonthlyPrincipal.ToString("C")</td>
                                <td>@item.MonthlyInterest.ToString("C")</td>
                                <td>@item.TotalInterest.ToString("C")</td>
                                <td>@item.Balance.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

</div>